{
    "manifest_version": 2,
    "name": "Regex Search",
    "version": "0.1",

    "description": "Enables regex expression matching in Chrome page search",
    "icons": {
        "16": "res/16_icon.png",
        "48": "res/48_icon.png",
        "64": "res/64_icon.png",
        "128": "res/128_icon.png"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "webNavigation"
    ],

    "content_scripts": [{
        "js": ["src/jquery-1.12.2.min.js", "src/popup.js", "src/content.js"],
        "matches": ["http://*/*", "https://*/*", "<all_urls>"],
        "all_frames": true,
        "match_about_blank": true
    }],

    "browser_action": {
        "default_icon": {
            "19": "res/19_icon.png",
            "38": "res/38_icon.png"
        },
        "default_title": "Regex Search",
        "default_popup": "src/popup.html"
    },

    "commands": {
        "next": {
            "description": "go to next search result"
        },
        "prev": {
            "description": "go to previous search result"
        },
        "_execute_browser_action": {
        }
    },

    "author": "Matthew Roseman | mroseman95@gmail.com"

}
